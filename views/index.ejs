<!DOCTYPE html>
<html>
  <head>
    <title>Cost to Drive</title>
    <script src="https://code.jquery.com/jquery-3.7.1.slim.min.js" integrity="sha256-kmHvs0B+OpCW5GVHUNjv9rOmY0IvSIRcf7zGUDTDQM8=" crossorigin="anonymous"></script>
    <!-- <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script> -->
    <script language="javascript" src="js/bootstrap.bundle.min.js"></script>

    <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous"> -->
    <link rel="stylesheet" href="css/bootstrap.min.css"/>
    <link rel='stylesheet' href='/stylesheets/style.css'/>

    <!-- Favicon -->
    <link rel="icon" href="/images/emoji-car-w10-32x32.png" type="image/x-icon">
  </head>
  <body id="ctd-body">
    <div class="container-fluid h-100">
        <div class="row d-flex justify-content-center align-items-center">
            <!-- Make -->
            <div class="justify-content-center h-100 col-9 row m-1">
                <div class="col-3 my-auto p-0">
                    <p class="text-end h4 my-auto">Make:</p>
                </div>

                <div class="col-6">
                    <select id="select-make" class="form-select" aria-label="Default select example">
                        <option value="" selected>Select a Make</option>
                    </select>
                </div> 
            </div>

            <!-- Model -->
            <div class="justify-content-center h-100 col-9 row m-1">
                <div class="col-3 my-auto p-0">
                    <p class="text-end h4 my-auto">Model:</p>
                </div>

                <div class="col-6">
                    <select id="select-model" class="form-select" aria-label="Default select example">
                        <option value="" selected>Select a Model</option>
                    </select>
                </div> 
            </div>

            <!-- Year -->
            <div class="justify-content-center h-100 col-9 row m-1">
                <div class="col-3 my-auto p-0">
                    <p class="text-end h4 my-auto">Year:</p>
                </div>

                <div class="col-6">
                    <select id="select-year" class="form-select" aria-label="Test">
                        <option value="" selected>Select a Year</option>
                    </select>
                </div>
            </div>

            <!-- Fuel Type -->
            <div class="justify-content-center h-100 col-9 row m-1">
                <div class="col-3 my-auto p-0">
                    <p class="text-end h4 my-auto">Fuel Type:</p>
                </div>

                <div class="col-6">
                    <select id="select-fuel-type" class="form-select" aria-label="Test">
                        <option value="" selected>Select a Fuel Type</option>
                    </select>
                </div>
            </div>

            <!-- Engine Size -->
            <div class="justify-content-center h-100 col-9 row m-1">
                <div class="col-3 my-auto p-0">
                    <p class="text-end h4 my-auto">Engine Size:</p>
                </div>

                <div class="col-6">
                    <select id="select-engine-size" class="form-select" aria-label="Test">
                        <option value="" selected>Select an Engine Size</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
  </body>

  <script src="/javascripts/index.js"></script>

</html>
